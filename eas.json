{
  "cli": {
    "version": ">= 16.19.3",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "LIGHTNINGCSS_USE_WASM": "1"
      },
      "android": {
        "buildType": "apk"
      }
    },
    "preview": {
      "distribution": "internal",
      "env": {
        "LIGHTNINGCSS_USE_WASM": "1"
      },
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "autoIncrement": true,
      "env": {
        "LIGHTNINGCSS_USE_WASM": "1"
      },
      "android": {
        "buildType": "app-bundle"
      }

    }
  },
  "submit": {
    "production": {}
  }
}
